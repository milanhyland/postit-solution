<h4>Please log in</h4>


<div class='well'>
  <%= form_tag '/login' do %>



      <div class='control-group'>
        <%= f.label :username%>
        <%= f.text_field :username, params[:username] || '' %>
      </div>

      <div class='control-group'>
        <%= f.label :password%>
        <%= f.text_field :password,params[:password] || '' %>
      </div>



      <%= submit_tag "Login", class: 'btn btn-success' %>

  <%end%>
</div>